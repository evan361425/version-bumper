{
  "$schema": "schema.json",
  "repo": {
    "link": "https://github.com/evan361425/version-bumper"
  },
  "changelog": {
    "enable": true,
    "commit": {
      "message": {
        "value": "chore: bump to {version}"
      }
    }
  },
  "tags": {
    "release": {
      "pattern": "v[0-9]+.[0-9]+.[0-9]+",
      "changelog": true,
      "release": {
        "enable": true
      }
    }
  }
}
