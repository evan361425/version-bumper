{
  "$schema": "schema.json",
  "repoLink": "https://github.com/evan361425/version-bumper",
  "changelog": {
    "commitMessage": "chore: bump to {version}",
    "template": "{content}"
  },
  "beforeCommit": ["npm version --no-commit-hooks --no-git-tag-version {tag}"],
  "latestInfo": {
    "diff": {
      "enable": true,
      "allowed": ["doc:", "chore"]
    }
  },
  "tags": {
    "release": {
      "pattern": "v[0-9]+.[0-9]+.[0-9]+",
      "changelog": true,
      "release": {
        "enable": true
      }
    }
  }
}
