{
  "$schema": "schema.json",
  "repoLink": "https://github.com/evan361425/version-bumper",
  "release": {
    "draft": true
  },
  "changelog": {
    "commitMessage": "chore: bump to {version}",
    "template": "{content}"
  },
  "latestInfo": {
    "diff": {
      "enable": true,
      "ignored": ["doc:", "chore"]
    }
  },
  "tags": {
    "release": { "pattern": "v[0-9]+.[0-9]+.[0-9]+", "changelog": true }
  }
}
